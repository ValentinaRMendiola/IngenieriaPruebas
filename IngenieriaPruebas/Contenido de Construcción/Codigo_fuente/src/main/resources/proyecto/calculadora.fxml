<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proyecto.Controller" prefWidth="400" prefHeight="300">
    
    <Label text="Calculadora Base" layoutX="150" layoutY="20" />
    
    <TextField fx:id="inputA" layoutX="50" layoutY="70" prefWidth="100"/>
    <TextField fx:id="inputB" layoutX="200" layoutY="70" prefWidth="100"/>
    
    <Button text="Sumar" layoutX="50" layoutY="120" fx:id="btnSumar" onAction="#sumar"/>
    <Button text="Restar" layoutX="200" layoutY="120" fx:id="btnRestar" onAction="#restar"/>
    
    <Label fx:id="lblResultado" text="Resultado:" layoutX="50" layoutY="180"/>
    
</AnchorPane>
