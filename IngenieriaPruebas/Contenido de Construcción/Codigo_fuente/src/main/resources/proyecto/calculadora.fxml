<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<AnchorPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="proyecto.Controller" prefWidth="360" prefHeight="420">
    
    <Label text="Calculadora Base" layoutX="28" layoutY="20" />
    
    <TextField fx:id="inputA" layoutX="245" layoutY="45" prefWidth="100"/>
    <TextField fx:id="inputB" layoutX="245" layoutY="85" prefWidth="100"/>
    
    
    <Button text="=" layoutX="300" layoutY="370" fx:id="btnSumar" onAction="#sumar" prefWidth="35" prefHeight="35" />
