    <Button text="-" layoutX="300" layoutY="275" fx:id="btnRestar" onAction="#restar" prefWidth="35" prefHeight="35"/>
    <Button text="X" layoutX="300" layoutY="225" fx:id="btnMultiplicar" onAction="#multiplicar" prefWidth="35" prefHeight="35"/>
    <Button text="รท" layoutX="300" layoutY="180" fx:id="btnSumar" onAction="#sumar" prefWidth="35" prefHeight="35"/>
    <Button text=".100" layoutX="225" layoutY="180" fx:id="btnSumar" onAction="#sumar" prefWidth="35" prefHeight="35"/>


    
    <Label fx:id="lblResultado" text="Resultado:" layoutX="28" layoutY="65"/>
    
</AnchorPane>
